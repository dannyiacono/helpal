<div>
  <h1>Messages</h1>
</div>

<div>

</div>
<div>
  <ul>
    <%  @user_conversations.each do |conversation| %>
      <li>
        <% if conversation.messages.present? %>
          <%= conversation.messages.last.created_at %>
          <%= conversation.messages.last.body %>
        <% else %>
          <p>Currently there is no conversation present</p>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

