<div class=”ui segment”>
<% if @messages%>
  <% @messages.each do |message| %>
    <% if message.body %>
     <% user = User.find(message.user_id) %>
     <div class=”item”>
      <div class=”content”>
        <div class=”list”>
          <div class=”item”>
            <i class=”right triangle icon”></i>
            <%= message.body %>
          </div>
        </div>
      </div>
    </div>
   <% end %>
  <% end %>
<% end %>
</div>

<%= form_for [@conversation, @message] do |f| %>
  <div class=”field”>
   <%= f.text_area :body %>
  </div>
  <%= hidden_field_tag :user_id, current_user.id %>
  <div>
   <%= f.submit "Reply" %>
  </div>
 <% end %>
