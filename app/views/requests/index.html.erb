<div class="container">

  <% if @requests.present? %>
  <div>
    <h1>Requests looking for helpal</h1>
    <% @pending_requests.each do |request| %>
      <p><%= request.status %></p>
      <h3><%= request.title %></h3>
      <p><%= request.due_date %></p>
      <span><%= Category.find_by(id: request.category_id).name %></span>
    <% end %>
  </div>

  <br>
  <br>

  <div>
    <h1>Assigned to helpal</h1>
    <% @ongoing_requests.each do |request| %>
      <p><%= request.status %></p>
      <h3><%= request.title %></h3>
      <p><%= request.due_date %></p>
      <span><%= request.category_id %></span>
      <% if request.helper.photo.attached? %>
        <%= cl_image_tag request.helper.photo.key %>
      <% else %>
        <img class="rounded-circle mx-auto mb-3" src="https://www.pinestrawmag.com/wp-content/uploads/2017/07/4yrcs2zo.png" style="height: 45; width: 45;">
      <% end %>
    <% end %>
  </div>

  <br>
  <br>

  <div>
    <h1>Completed</h1>
    <% @done_requests.each do |request| %>
      <p><%= request.status %></p>
      <h3><%= request.title %></h3>
      <p><%= request.due_date %></p>
      <span><%= request.category_id %></span>
      <p><%= request.helper_id %></p>
    <% end %>
  </div>

  <% else %>
    <h3>Sorry, you don't have any requests to display.</h1>
  <% end %>

</div>
