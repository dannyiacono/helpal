<div class="container">

  <div class="cards-wrapper">
  <% if @requests.present? %>
    <h3>Requests looking for helpal</h3>
      <div class="cards">
        <% @pending_requests.each do |request| %>
          <div class="request-card">
            <p id="request-status"><%= request.status.capitalize %></p>
            <h3><%= request.title.truncate(42) %></h3>
            <div class="date">
              <i class="fas fa-map-marker-alt"></i>
              <p><%= request.due_date.strftime('%B %d, %Y') %></p>
            </div>
            <div class="user-category-tags">
              <span><%= Category.find_by(id: request.category_id).name %></span>
            </div>
            <div class="links">
              <%= link_to "View details", request_path(request), class: "details-btn" %>
              <%= link_to "Cancel", request_path(request), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-btn" %>
            </div>
          </div>
          <% end %>
      </div>

    <h3>Assigned to helpal</h3>
    <% if @ongoing_requests.present? %>
      <div class="cards">
        <% @ongoing_requests.each do |request| %>
          <div class="request-card">
            <% if !request.helper_id.nil? %>
              <% if request.helper.photo.attached? %>
                <%= link_to (cl_image_tag request.helper.photo.key, class: "avatar"), other_profile_path(request.helper) %>
              <% else %>
                <%= link_to image_tag( class: "avatar waldo-img"), other_profile_path(@other_user) %>
              <% end %>
            <% end %>
            <h3><%= request.title %></h3>
            <div class="date">
              <i class="fas fa-map-marker-alt"></i>
              <p><%= request.due_date.strftime('%B %d, %Y') %></p>
            </div>
            <div class="user-category-tags">
              <span><%= Category.find_by(id: request.category_id).name %></span>
            </div>
            <div class="links">
              <%= link_to "View details", request_path(request), class: "details-btn" %>
              <%= link_to "Cancel", request_path(request), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="not-assigned">Nothing assigned yet</p>
    <% end %>

    <h3>Completed</h3>
    <% if @done_requests.present? %>
      <div class="cards">
        <% @done_requests.each do |request| %>
          <div class="request-card">position: absolutposition: absolute; right: 14px; top: 14px;e; right: 14px; top: 14px;
            <% if !request.helper_id.nil? %>
              <% if request.helper.photo.attached? %>
                <%= link_to (cl_image_tag request.helper.photo.key, class: "avatar"), other_profile_path(request.helper_id) %>
              <% else %>
                <img class="avatar-middle waldo-img mx-auto mb-3" style="position: absolute; right: 14px; top: 14px;">
              <% end %>
            <% end %>
            <h3><%= request.title %></h3>
            <div class="date">
              <i class="fas fa-map-marker-alt"></i>
              <p><%= request.due_date.strftime('%B %d, %Y') %></p>
            </div>
            <div class="user-category-tags">
              <span><%= Category.find_by(id: request.category_id).name %></span>
            </div>
            <div class="links">
              <%= link_to "View details", request_path(request), class: "details-btn" %>
              <%= link_to "Cancel", request_path(request), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-btn" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="not-assigned">Nothing completed yet</p>
    <% end %>


  <% else %>
    <div class="no-results">
    <h3>Sorry, you don't have any requests to display.</h3>
    <p>Create your first request.</p>
    <%= link_to "New request", categories_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  </div>
</div>
