<div class="request-new-wrapper">
  <% if user_signed_in?  %>
    <h3>Complete your help request:</h3>
  <div class="new-form">
    <div class="category-selected">
    </div>
    <div class="no-location-selected">
      <% if @location.nil?%>
        <span>Please select a city.</span>
      <% end %>
    </div>
    <div class="form-input">
      <%= simple_form_for @request do |f| %>
        <%= f.input :status, :as => :hidden%>
        <%= f.input :category_id, :as => :hidden%>
        <%= f.input :city, input_html: {value: @location}, :as => :hidden%>
        <%= f.input :due_date, as: :string, placeholder: "Please enter a due date", input_html: { id: "request_due_date"}%>
        <%= f.input :title, required: true, hint: "Title required"%>
        <%= f.input :description, required: true%>
        <%= f.submit :Submit, class: "btn btn-primary" %>
        <%= f.button :button, "Cancel", type: "reset", class: "btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
  <%else %>
    <div class="login_before_request">
      <div>
        <p><strong>New to Helpal?</strong> Please sign up and create your first request!</p>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
      </div>
      <div>
        <p><strong>Already on Helpal?</strong> Please sign in to create a request.</p>
        <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>
